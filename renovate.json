{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "labels": ["dependencies"],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Automerge all minor and patch updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Major updates - require review",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group Go dependencies",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "go dependencies (non-major)"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "github-actions (non-major)"
    },
    {
      "description": "Group Docker dependencies",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "docker dependencies (non-major)"
    }
  ],
  "schedule": ["before 9am on monday"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track restic package version in Dockerfile",
      "fileMatch": ["^Dockerfile$", "^Dockerfile\\.goreleaser$"],
      "matchStrings": [
        "ARG RESTIC_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "restic/restic"
    },
    {
      "customType": "regex",
      "description": "Track Go version in Dockerfile",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG GOLANG_VERSION=(?<currentValue>\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "golang"
    }
  ]
}
