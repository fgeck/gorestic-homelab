# Restic repository password (required)
RESTIC_PASSWORD=your-secure-password

# PostgreSQL password (if using postgres backup)
POSTGRES_PASSWORD=your-db-password

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF
TELEGRAM_CHAT_ID=-1001234567890

# Path to data to back up
BACKUP_DATA_PATH=/path/to/your/data

# Path to SSH key for remote shutdown
SSH_KEY_PATH=~/.ssh/id_rsa

# REST server data directory (if using local rest-server)
REST_SERVER_DATA=./backups
